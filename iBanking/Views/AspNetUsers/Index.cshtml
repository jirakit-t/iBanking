@model IEnumerable<iBanking.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            Manager
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        @if (ViewBag.UserRole != 3)
        {
            <th>
                <a class="btn btn-success" style="height: 30px; font-size: smaller;" href="@Url.Action("Create", "AspNetUsers")">Create New</a>
            </th>
        }
        else
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        @if (ViewBag.UserRole != 3)
        {
            <td>
                <a class="btn btn-default" style="height: 20px; padding-top: 2px; font-size: x-small;" href="@Url.Action("Edit", "AspNetUsers", new { id = item.Id })">Edit</a>
            </td>
        }
        else
        {
            <td></td>
        }
    </tr>
}

</table>

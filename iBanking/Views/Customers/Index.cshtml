@model IEnumerable<iBanking.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<table id="Datatable" class="table">
    <tr>
        <th>IBANNo</th>
        <th>CardID</th>
        <th>Customer Name</th>
        <th>Create Date</th>
        <th>Birth Date</th>
        <th>E-mail</th>
        <th>Address</th>
        <th>Phone1</th>
        <th>Branch Name</th>
        @if (ViewBag.UserRole != 3)
        {
            <th>
                <a class="btn btn-success" style="height: 30px; font-size: smaller;" href="@Url.Action("Create", "Customers")">Create New</a>
            </th>
        }
        else
        {
            <th></th>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IBANNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            @if(ViewBag.UserRole != 3)
            {
                <td>
                    <a class="btn btn-default" style="height: 20px; padding-top: 2px; font-size: x-small;" href="@Url.Action("Edit", "Customers", new { id = item.ID })">Edit</a>
                </td>
            }
            else
            {
                <td></td>
            }
        </tr>
    }
</table>
<script type="text/javascript">
    $('#Datatable').dataTable();
</script>
